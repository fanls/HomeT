<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
<constant name="struts.objectFactory" value="spring" />
<constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.i18n.reload" value="true" />
    <constant name="struts.configuration.xml.reload" value="true" />
    <constant name="struts.custom.i18n.resources" value="globalMessages" />
	<constant name="struts.url.includeParams" value="none" />
	<constant name="struts.ui.theme" value="xhtml"></constant>
	<package name="struts2" namespace="/user" extends="struts-default">
		<action name="login" class="loginAction" method="login">
			<result name="success" type="redirect">/user/userquery.action</result>
			<result name="failer">/error.jsp</result>
		</action>
		<action name="useradd" class="userMgrAction" method="addUser">
		 <result name="success" type="redirect">/user/userquery.action</result>
		</action>		
		<action name="userquery" class="userMgrAction" method="queryUser">
			<result name="success" type="redirect">/user/queryBlog</result>	
		</action>		
		<action name="userdelete" class="userMgrAction" method="deleteUser"> 
			<result name="success" type="redirect">/user/userquery.action</result>
		</action>		
		<action name="userupdate" class="userMgrAction" method="updateUser">
			<result name="success" type="redirect">/user/userquery.action</result>
			<result name="input">/update.jsp</result>
		</action>
		<action name="*Blog" method="{1}" class="blogMgrAction">
			<result name="success" type="redirect">/user/queryBlog</result>
			<result name="query">/show/blog_query.jsp</result>
			<result name="showblog">/show/blog.jsp</result>
		</action>
		<action name="*_Resume" method="{1}" class="resumeAction">
			<result name="success" type="redirect">/user/queryByUid_Resume</result>
			<result name="queryByUid">/resume.jsp</result>
			<result name="showblog">/show/blog.jsp</result>
		</action>
	</package>
</struts>    
